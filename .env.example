# AWS Configuration for SES (Simple Email Service)
# Copy this file to .env and fill in your actual values

# AWS Region where your SES service is configured
AWS_REGION=us-east-1

# AWS Access Key ID with SES permissions
AWS_ACCESS_KEY_ID=your_access_key_here

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Email Configuration
# The email address that will appear as the sender (must be verified in SES)
CONTACT_FROM_EMAIL=seniors@vragc.co.uk

# The email address where contact form submissions will be sent
CONTACT_TO_EMAIL=seniors@vragc.co.uk

# The email address that will be used for replies (optional)
CONTACT_REPLY_TO_EMAIL=seniors@vragc.co.uk

# Development/Production Environment
NODE_ENV=development