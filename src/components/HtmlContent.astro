---
export interface Props {
  content: string;
}

const { content } = Astro.props;

// Debug: Log the content to see what we're receiving
console.log('HtmlContent received:', JSON.stringify(content.substring(0, 200)));

// Try to ensure content is treated as raw HTML
const rawContent = content;
---

<div class="html-content" set:html={rawContent}></div>

<style>
  .html-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #1f2937;
  }
  
  .html-content :global(h4) {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  
  .html-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .html-content :global(ul) {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .html-content :global(ol) {
    list-style-type: decimal;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .html-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }
  
  .html-content :global(ul ul) {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  .html-content :global(strong) {
    font-weight: 600;
  }
</style>