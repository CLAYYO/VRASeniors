---
import { config } from '../config';
import { getAllContent, getSectionFromPage } from '../utils/data';

const content = getAllContent();
const currentYear = new Date().getFullYear();

// Group content by sections for sitemap
const sectionContent = {
  golf: content.filter(item => getSectionFromPage(item.page) === 'golf'),
  portfolio: content.filter(item => getSectionFromPage(item.page) === 'portfolio'),
  administration: content.filter(item => getSectionFromPage(item.page) === 'administration')
};
---

<footer class="bg-gray-900 text-white" role="contentinfo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Contact Information -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
        <div class="space-y-2 text-gray-300">
          <p>
            <a 
              href={`mailto:${config.site.email}`}
              class="hover:text-white transition-colors"
            >
              {config.site.email}
            </a>
          </p>
          <p class="text-sm">
            Vale Royal Abbey Golf Club<br>
            Seniors Section
          </p>
          <p class="text-sm mt-4">
            <a href="/" class="hover:text-white transition-colors">
              ← Back to Seniors Home
            </a>
          </p>
        </div>
      </div>
      
      <!-- Golf Section Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Golf</h3>
        <ul class="space-y-2 text-gray-300">
          {sectionContent.golf.slice(0, 6).map(item => (
            <li>
              <a 
                href={`/golf/${item.slug}`}
                class="text-sm hover:text-white transition-colors"
              >
                {item.title.replace('Portfolio – ', '').replace('Administration – ', '')}
              </a>
            </li>
          ))}
          {sectionContent.golf.length > 6 && (
            <li>
              <a href="/golf" class="text-sm text-green-400 hover:text-green-300 transition-colors">
                View all Golf pages →
              </a>
            </li>
          )}
        </ul>
      </div>
      
      <!-- Portfolio Section Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Portfolio</h3>
        <ul class="space-y-2 text-gray-300">
          {sectionContent.portfolio.slice(0, 6).map(item => (
            <li>
              <a 
                href={`/portfolio/${item.slug}`}
                class="text-sm hover:text-white transition-colors"
              >
                {item.title.replace('Portfolio – ', '').replace('Administration – ', '')}
              </a>
            </li>
          ))}
          {sectionContent.portfolio.length > 6 && (
            <li>
              <a href="/portfolio" class="text-sm text-green-400 hover:text-green-300 transition-colors">
                View all Portfolio pages →
              </a>
            </li>
          )}
        </ul>
      </div>
      
      <!-- Administration Section Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Administration</h3>
        <ul class="space-y-2 text-gray-300">
          {sectionContent.administration.slice(0, 6).map(item => (
            <li>
              <a 
                href={`/administration/${item.slug}`}
                class="text-sm hover:text-white transition-colors"
              >
                {item.title.replace('Portfolio – ', '').replace('Administration – ', '')}
              </a>
            </li>
          ))}
          {sectionContent.administration.length > 6 && (
            <li>
              <a href="/administration" class="text-sm text-green-400 hover:text-green-300 transition-colors">
                View all Administration pages →
              </a>
            </li>
          )}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-sm text-gray-400">
          <p>&copy; {currentYear} Vale Royal Abbey Golf Club - Seniors Section. All rights reserved.</p>
        </div>
        <div class="text-sm text-gray-400 mt-4 md:mt-0">
          <p>Last updated: {config.site.lastUpdated}</p>
        </div>
      </div>
    </div>
  </div>
</footer>