---
export interface Props {
  breadcrumbs: Array<{label: string, href: string}>;
}

const { breadcrumbs } = Astro.props;
---

{breadcrumbs.length > 1 && (
  <nav aria-label="Breadcrumb" class="bg-gray-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <ol class="flex items-center space-x-2 text-sm">
        {breadcrumbs.map((crumb, index) => (
          <li class="flex items-center">
            {index > 0 && (
              <svg class="h-4 w-4 text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            )}
            {index === breadcrumbs.length - 1 ? (
              <span class="text-gray-500 font-medium" aria-current="page">
                {crumb.label}
              </span>
            ) : (
              <a 
                href={crumb.href} 
                class="text-green-600 hover:text-green-700 hover:underline transition-colors cursor-pointer font-medium"
              >
                {crumb.label}
              </a>
            )}
          </li>
        ))}
      </ol>
      
      <!-- Back to Seniors Home link -->
      <div class="mt-2">
        <a 
          href="/" 
          class="inline-flex items-center text-xs text-gray-500 hover:text-green-600 hover:underline transition-colors cursor-pointer"
        >
          <svg class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Seniors Home
        </a>
      </div>
    </div>
  </nav>
)}