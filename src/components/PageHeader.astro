---
export interface Props {
  title: string;
  description?: string;
  showYearFilter?: boolean;
  availableYears?: string[];
  currentYear?: string;
}

const { title, description, showYearFilter = false, availableYears = [], currentYear } = Astro.props;
---

<header class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
          {title}
        </h1>
        {description && (
          <p class="text-lg text-gray-600 max-w-3xl">
            {description}
          </p>
        )}
      </div>
      
      {showYearFilter && availableYears.length > 0 && (
        <div class="mt-4 lg:mt-0 lg:ml-6">
          <label for="year-filter" class="sr-only">Filter by year</label>
          <select 
            id="year-filter" 
            class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm rounded-md"
            onchange="window.location.href = this.value"
          >
            <option value="">All Years</option>
            {availableYears.map(year => (
              <option 
                value={`?year=${year}`} 
                selected={currentYear === year}
              >
                {year}
              </option>
            ))}
          </select>
        </div>
      )}
    </div>
  </div>
</header>