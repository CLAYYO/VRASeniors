---
import type { ContentItem } from '../config';

export interface Props {
  section: string;
  sectionContent: ContentItem[];
  currentSlug?: string;
}

const { section, sectionContent, currentSlug } = Astro.props;

const sectionTitle = section.charAt(0).toUpperCase() + section.slice(1);
---

<!-- Mobile Menu Button -->
<div class="lg:hidden bg-white/95 backdrop-blur-sm border-b border-gray-200 p-4">
  <button
    id="sidebar-toggle"
    type="button"
    class="flex items-center justify-between w-full px-4 py-2 text-left text-gray-700 bg-white rounded-lg shadow-sm border border-gray-200 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
    aria-expanded="false"
    aria-controls="sidebar-nav"
  >
    <span class="font-medium">{sectionTitle} Menu</span>
    <svg class="w-5 h-5 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
</div>

<!-- Sidebar Navigation -->
<aside 
  id="sidebar-nav"
  class="w-full lg:w-64 bg-white/95 backdrop-blur-sm border-r border-blue-100 lg:min-h-screen lg:block hidden lg:sticky lg:top-16 lg:max-h-[calc(100vh-4rem)] lg:overflow-y-auto shadow-lg" 
  role="navigation" 
  aria-label={`${sectionTitle} navigation`}
>
  <div class="p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4 hidden lg:block">{sectionTitle}</h2>
    
    <nav>
      <ul class="space-y-1">
        {sectionContent.map((item) => {
          const isActive = currentSlug === item.slug;
          const cleanTitle = item.title
            .replace('Portfolio – ', '')
            .replace('Administration – ', '');
          
          return (
            <li>
              <a
                href={`/${section}/${item.slug}`}
                class={`block px-4 py-3 rounded-xl text-sm transition-all duration-300 hover:shadow-md hover:scale-[1.02] ${
                  isActive
                    ? 'bg-gradient-to-r from-blue-600 to-teal-600 text-white font-semibold shadow-lg border border-blue-300'
                    : 'text-gray-700 hover:text-blue-700 hover:bg-gradient-to-r hover:from-blue-50 hover:to-teal-50 hover:border hover:border-blue-200 bg-white/80 border border-gray-100'
                }`}
                {...(isActive && { 'aria-current': 'page' })}
              >
                {cleanTitle}
                {item.pdfs && item.pdfs.length > 0 && (
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    {item.pdfs.length} PDF{item.pdfs.length > 1 ? 's' : ''}
                  </span>
                )}
              </a>
            </li>
          );
        })}
      </ul>
    </nav>
    
    <!-- Quick Links -->
    <div class="mt-8 pt-6 border-t border-gray-200">
      <h3 class="text-sm font-medium text-gray-900 mb-3 flex items-center">
        <svg class="w-4 h-4 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
        Quick Links
      </h3>
      <ul class="space-y-2 text-sm">
        <li>
          <a href="/hall-of-fame" class="flex items-center text-blue-600 hover:text-blue-700 transition-colors p-2 rounded-lg hover:bg-blue-50">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
            Hall of Fame
          </a>
        </li>
        <li>
          <a href="mailto:seniors@vragc.co.uk" class="flex items-center text-blue-600 hover:text-blue-700 transition-colors p-2 rounded-lg hover:bg-blue-50">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Contact Seniors
          </a>
        </li>
        <li>
          <a href="/" class="flex items-center text-gray-500 hover:text-gray-700 transition-colors p-2 rounded-lg hover:bg-gray-50">
            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Home
          </a>
        </li>
      </ul>
    </div>
  </div>
</aside>

<script>
  // Mobile sidebar toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const sidebarNav = document.getElementById('sidebar-nav');
    const toggleIcon = sidebarToggle?.querySelector('svg');
    
    if (sidebarToggle && sidebarNav && toggleIcon) {
      sidebarToggle.addEventListener('click', () => {
        const isHidden = sidebarNav.classList.contains('hidden');
        
        if (isHidden) {
          sidebarNav.classList.remove('hidden');
          sidebarToggle.setAttribute('aria-expanded', 'true');
          toggleIcon.style.transform = 'rotate(180deg)';
        } else {
          sidebarNav.classList.add('hidden');
          sidebarToggle.setAttribute('aria-expanded', 'false');
          toggleIcon.style.transform = 'rotate(0deg)';
        }
      });
    }
  });
</script>