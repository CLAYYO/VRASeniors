---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SectionNav from '../../components/SectionNav.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import PageHeader from '../../components/PageHeader.astro';
import DocList from '../../components/DocList.astro';
import { getContentBySection, getBreadcrumbs, sanitizeContent } from '../../utils/data';

export async function getStaticPaths() {
  const administrationContent = await getContentBySection('administration');
  
  return administrationContent.map((item) => ({
    params: { slug: item.slug },
    props: { item }
  }));
}

const { item } = Astro.props;

// Get all administration content for sidebar
const administrationContent = await getContentBySection('administration');

// Set up breadcrumbs
const breadcrumbs = getBreadcrumbs('administration', item.title);

const title = `${item.title} - Administration - Vale Royal Abbey Golf Club Seniors`;
const description = item.content ? sanitizeContent(item.content).substring(0, 160) : `Information about ${item.title} for the Vale Royal Abbey Golf Club Seniors Section.`;
---

<BaseLayout title={title} description={description}>
  <Breadcrumbs breadcrumbs={breadcrumbs} />
  
  <div class="bg-white/95 backdrop-blur-sm">
    <PageHeader 
      title={item.title.replace('Administration – ', '')} 
      description={item.content ? sanitizeContent(item.content).substring(0, 200) : undefined}
    />
  </div>
  
  <SectionNav section="administration" sectionContent={administrationContent} currentSlug={item.slug} />
  
  <main class="bg-gray-50 min-h-screen" role="main">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4 lg:py-8">
        {item.content ? (
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-8">
            <div class="prose prose-lg max-w-none" set:html={item.content} />
          </div>
        ) : (
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-8">
            <p class="text-gray-600">
              Information about {item.title.replace('Administration – ', '')} will be available here.
            </p>
          </div>
        )}
        
      {item.pdfs && item.pdfs.length > 0 && (
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
          <DocList 
            documents={item.pdfs} 
            title="Related Documents" 
            showFilters={item.pdfs.length > 5}
            gridView={false}
          />
        </div>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  /* Custom styles for content formatting */
  .prose ul {
    list-style-type: disc;
    margin-left: 1.5rem;
  }
  
  .prose ol {
    list-style-type: decimal;
    margin-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #1f2937;
  }
  
  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #1f2937;
  }
</style>